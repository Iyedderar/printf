#include "main.h"

/**
 * printf_binary - prints an unsigned integer in binary format.
 * @val: arguments.
 * Return: the number of digits printed.
 */
int printf_binary(va_list val)
{
    unsigned int n = va_arg(val, unsigned int);
    int count = 0;
    int binary[32]; // Assuming 32-bit integers, change if needed

    if (n == 0)
    {
        _putchar('0');
        return (1);
    }

    // Convert the integer to binary and store it in the binary array
    for (int i = 0; n > 0; i++)
    {
        binary[i] = n % 2;
        n = n / 2;
    }

    // Print the binary representation in reverse order
    for (int j = 31; j >= 0; j--)
    {
        _putchar(binary[j] + '0');
        count++;
    }

    return (count);
}

